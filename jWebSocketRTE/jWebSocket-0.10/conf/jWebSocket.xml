			<id>userFilter</id>
			<ns>org.jWebSocket.filters.custom</ns>
			<jar>jWebSocketPlugins-0.10.jar</jar>
			<server-assignments>
				<server-assignment>ts0</server-assignment>
			</server-assignments>
		</filter>
	</filters>

